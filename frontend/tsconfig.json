{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ],
      "@/components/*": [
        "./src/components/*",
        "./components/*"
      ],
      "@/pages/*": [
        "./src/pages/*",
        "./pages/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*",
        "./hooks/*"
      ],
      "@/services/*": [
        "./src/services/*",
        "./services/*"
      ],
      "@/types/*": [
        "./src/types/*",
        "./types/*"
      ],
      "@/utils/*": [
        "./src/utils/*",
        "./utils/*"
      ],
      "@/store/*": [
        "./src/store/*",
        "./store/*"
      ],
      "@/stores/*": [
        "./src/stores/*",
        "./stores/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
