FROM node:20-alpine

WORKDIR /app

# Copy package manifests first for better cache reuse
COPY package*.json ./
COPY frontend/package*.json ./frontend/

# Install frontend dependencies
RUN npm install --prefix=frontend

# Copy source
COPY frontend ./frontend

# Build Next.js
WORKDIR /app/frontend
RUN npm run build

# Expose port
EXPOSE 3000

# Start application
CMD ["npm", "start"]
