FROM node:20-alpine

WORKDIR /app

# Copy package manifests first for better cache reuse
COPY package*.json ./
COPY backend/package*.json ./backend/

# Install backend dependencies
RUN npm install --prefix=backend

# Copy source
COPY backend ./backend

# Build backend
WORKDIR /app/backend
RUN npm run build

# Expose port
EXPOSE 5000

# Start application
CMD ["npm", "start"]
