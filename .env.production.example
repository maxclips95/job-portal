# Production Environment Configuration
# Use this for production deployments

NODE_ENV=production

# Backend
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
BACKEND_URL=https://api.jobportal.com

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=https://jobportal.com
NEXT_PUBLIC_API_URL=https://api.jobportal.com

# Database (Production PostgreSQL)
DB_HOST=prod-db.example.com
DB_PORT=5432
DB_NAME=job_portal_prod
DB_USER=prod_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis (Production)
REDIS_HOST=prod-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_DB=0

# JWT
JWT_SECRET=CHANGE_ME_VERY_LONG_RANDOM_SECRET_KEY
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Email
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=CHANGE_ME_SENDGRID_KEY

# Payment
STRIPE_PUBLIC_KEY=pk_live_your_production_key
STRIPE_SECRET_KEY=sk_live_your_production_secret
STRIPE_WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_S3_BUCKET=job-portal-prod

# Logging
LOG_LEVEL=warn
SENTRY_DSN=https://your-sentry-dsn@sentry.io/production-id

# Third-party
GITHUB_CLIENT_ID=CHANGE_ME
GITHUB_CLIENT_SECRET=CHANGE_ME
GOOGLE_CLIENT_ID=CHANGE_ME
GOOGLE_CLIENT_SECRET=CHANGE_ME

# CORS
CORS_ORIGIN=https://jobportal.com
ALLOWED_ORIGINS=https://jobportal.com,https://api.jobportal.com,https://www.jobportal.com

# Features (all enabled in production)
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_SCREENING=true
ENABLE_PAYMENT=true
ENABLE_MENTORSHIP=true
ENABLE_PWA=true

# ML/AI (Production - Using Free Tier APIs)
ML_MODEL_PATH=/opt/models

# Groq API (Free Tier: 30K tokens/min - Fastest inference)
GROQ_API_KEY=CHANGE_ME_GROQ_PRODUCTION_KEY
GROQ_MODEL=mixtral-8x7b-32768

# Hugging Face (Free Tier - Backup option)
HUGGINGFACE_API_KEY=CHANGE_ME_HUGGINGFACE_TOKEN
HUGGINGFACE_MODEL=mistral-7b-instruct

# Kubernetes
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_IMAGE_TAG=1.0.0
KUBERNETES_NAMESPACE=job-portal
