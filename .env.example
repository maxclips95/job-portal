# Build-phase environment template (deployment-agnostic)
# Copy values into:
# - backend/.env
# - frontend/.env

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database (Postgres)
# Preferred:
DATABASE_URL=postgresql://postgres:postgres_password@localhost:5432/job_portal
# Fallback:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=job_portal
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_SSL=false

# Auth
JWT_SECRET=replace-with-a-secure-random-secret
REFRESH_TOKEN_SECRET=replace-with-a-different-secure-random-secret
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRE=30d

# Redis (optional in early local dev)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
