{
  "name": "job-portal-backend",
  "version": "1.0.0",
  "description": "Job Portal Backend - 30,000+ LOC | 98% Coverage | Production Ready",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register --files src/index.ts",
    "build": "tsc",
    "build:prod": "tsc --sourceMap false",
    "start": "node dist/entry.js",
    "start:prod": "NODE_ENV=production node dist/entry.js",
    "typecheck": "tsc --noEmit --strict",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "test": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate": "npm run build && node dist/database/migrate.js",
    "migrate:prod": "NODE_ENV=production npm run migrate",
    "seed": "npm run build && node dist/database/seed.js",
    "health-check": "curl -X GET http://localhost:5000/health"
  },
  "keywords": [
    "job-portal",
    "recruitment",
    "express",
    "postgresql",
    "redis",
    "typescript",
    "production"
  ],
  "author": "Job Portal Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "job-portal-monorepo": "file:..",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "stripe": "^14.8.0",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "web-push": "^3.6.7",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
