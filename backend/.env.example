# Server
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CORS_ORIGIN=http://localhost:3000

# Database
# Preferred: single URL
DATABASE_URL=postgresql://postgres:postgres_password@localhost:5432/job_portal
# Fallback (used when DATABASE_URL is unset)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=job_portal
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Auth
JWT_SECRET=replace-with-a-secure-random-secret
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=replace-with-a-different-secure-random-secret
REFRESH_TOKEN_EXPIRE=30d
OTP_LENGTH=6

# URLs
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:3000
DOMAIN=http://localhost:5000

# Email
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@jobportal.local
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_PASS=your-app-password
SMTP_SECURE=false

# Optional AI
GROQ_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# Logging
LOG_LEVEL=info
